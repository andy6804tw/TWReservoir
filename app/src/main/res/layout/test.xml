<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    card_view:cardBackgroundColor="#c8f7dab9"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    android:foreground="?selectableItemBackground"
    android:layout_margin="5dp"
    card_view:contentPadding="5dp"
    android:clickable="true"
    android:layout_height="170dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/waveLoadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:wlv_progressValue="40"
            app:wlv_shapeType="circle"
            app:wlv_round_rectangle="true"
            app:wlv_triangle_direction="north"
            app:wlv_borderColor="@color/borderColor"
            app:wlv_borderWidth="2dp"
            app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
            app:wlv_titleCenterStrokeWidth="3dp"
            app:wlv_titleCenter="68%"
            app:wlv_titleCenterColor="@android:color/white"
            app:wlv_titleCenterSize="36sp"
            app:wlv_waveAmplitude="70"
            app:wlv_waveColor="@android:color/holo_blue_dark"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="白河水庫"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:textColor="@color/tvName"
                android:paddingTop="5dp" />

            <TextView
                android:text="有效蓄水量:900.00萬立方公頃"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvWater"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/tvText" />

            <TextView
                android:text="今日進水量:0.37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDown"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/tvText" />

            <TextView
                android:text="預測剩餘天數:60天以上"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDay"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/tvText" />

            <TextView
                android:text="最後更新日期:2016-12-12(8時)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvUpdate"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/tvText" />
        </LinearLayout>

    </TableRow>

</android.support.v7.widget.CardView>