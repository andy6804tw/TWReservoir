<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#c8f7dab9"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/circleView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_barColor="@color/primary"
            CircleProgressView:cpv_barWidth="23dp"
            CircleProgressView:cpv_innerContourSize="0dp"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_outerContourSize="0dp"
            CircleProgressView:cpv_rimColor="@color/primary_light"
            CircleProgressView:cpv_rimWidth="23dp"
            CircleProgressView:cpv_seekMode="true"
            CircleProgressView:cpv_showUnit="true"
            CircleProgressView:cpv_spinColor="@color/primary"
            CircleProgressView:cpv_textColor="@color/primary_dark"
            CircleProgressView:cpv_textScale="1"
            CircleProgressView:cpv_unit="%"
            CircleProgressView:cpv_unitColor="@color/primary_light"
            CircleProgressView:cpv_unitPosition="right_top"
            CircleProgressView:cpv_unitScale="1"
            CircleProgressView:cpv_value="10"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="昨日水量下降:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWater"
            android:layout_alignLeft="@+id/tvWater"
            android:layout_alignStart="@+id/tvWater"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:text="預測剩餘天數:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/tvDay"
            android:layout_below="@+id/tvDown"
            android:layout_alignLeft="@+id/tvDown"
            android:layout_alignStart="@+id/tvDown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:text="最後更新日期:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/tvUpdate"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_below="@+id/tvDay"
            android:layout_alignLeft="@+id/tvDay"
            android:layout_alignStart="@+id/tvDay" />

        <TextView
            android:text="有效水量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:id="@+id/tvWater"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/circleView"
            android:layout_toEndOf="@+id/circleView" />

        <TextView
            android:text="有效水量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignLeft="@+id/tvWater"
            android:layout_alignStart="@+id/tvWater"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>