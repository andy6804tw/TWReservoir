<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#c8f7dab9"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/waveLoadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:wlv_borderColor="@color/colorAccent"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="40"
            app:wlv_shapeType="circle"
            app:wlv_round_rectangle="true"
            app:wlv_triangle_direction="north"
            app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
            app:wlv_titleCenterStrokeWidth="3dp"
            app:wlv_titleCenter="Center Title"
            app:wlv_titleCenterColor="@android:color/white"
            app:wlv_titleCenterSize="24sp"
            app:wlv_waveAmplitude="70"
            app:wlv_waveColor="@color/colorAccent"/>

        <TextView
            android:text="昨日水量下降:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWater"
            android:layout_alignLeft="@+id/tvWater"
            android:layout_alignStart="@+id/tvWater"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:text="預測剩餘天數:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/tvDay"
            android:layout_below="@+id/tvDown"
            android:layout_alignLeft="@+id/tvDown"
            android:layout_alignStart="@+id/tvDown"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:text="最後更新日期:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/tvUpdate"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_below="@+id/tvDay"
            android:layout_alignLeft="@+id/tvDay"
            android:layout_alignStart="@+id/tvDay" />

        <TextView
            android:text="有效水量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:id="@+id/tvWater"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/waveLoadingView" />

        <TextView
            android:text="有效水量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_alignLeft="@+id/tvWater"
            android:layout_alignStart="@+id/tvWater"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>